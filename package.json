{
  "name": "ecommerce",
  "version": "1.0.0",
  "description": "eCommerce is a comprehensive online shopping portal that allows users to browse a wide range of products, view detailed descriptions, add their favorite products to the cart, and proceed to checkout.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --config=./eslintrc.cjs --no-error-on-unmatched-pattern",
    "lint-fix": "eslint src --config=./eslintrc.cjs --fix --no-error-on-unmatched-pattern",
    "pretty": "npx prettier src --check",
    "pretty-fix": "npx prettier src --write",
    "test": "jest src --passWithNoTests",
    "test-cov": "jest src --coverage --passWithNoTests",
    "build": "npm run generate-css && webpack",
    "dev": "webpack serve",
    "generate-css": "tailwindcss -i ./src/tailwind/tailwind.base.css -o ./src/style.css",
    "tailwind-watch": "tailwindcss -i ./src/tailwind/tailwind.base.css -o ./src/style.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/alpinejs": "^3.7.2",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "alpinejs": "^3.12.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.1",
    "prettier": "3.0.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  }
}
